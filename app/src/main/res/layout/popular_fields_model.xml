<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="1dp"
    android:focusable="true"
    android:id="@+id/popularCard"
    android:clickable="true"
    android:foreground="@drawable/custom_ripple_effect"
    app:cardBackgroundColor="#455d7a"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/black"
            android:id="@+id/imagePopularFieldsCard"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imagePopularFieldsCard"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Application Development"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:id="@+id/txtPopularFields"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>