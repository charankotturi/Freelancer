<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.inboxFragment">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:id="@+id/noMessageLayout"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/ImageChat"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_chat"
                />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:scaleX="@integer/config_navAnimTime"
                android:background="#BD0000"
                android:rotation="45"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="You have not received any message."
            android:textSize="22sp"
            android:layout_below="@+id/ImageChat"
            android:gravity="center_horizontal"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>